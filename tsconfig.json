{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "es2021"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": ["src/**/*", "./declarations.d.ts"],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.stories.js",
    "src/**/*.stories.tsx",
    "src/**/*.test.js",
    "src/**/*.test.tsx"
  ]
}
